// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  skillsAssessments SkillsAssessment[]
  resumeAnalyses    ResumeAnalysis[]

  @@map("users")
}

model SkillsAssessment {
  id          String   @id @default(cuid())
  userId      String
  skills      String   // JSON string
  interests   String   // JSON string array
  experience  String?
  completedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("skills_assessments")
}

model ResumeAnalysis {
  id               String   @id @default(cuid())
  userId           String
  fileName         String?
  fileType         String?
  resumeText       String   // Original resume text
  extractedSkills  String   // JSON array of skills
  experienceLevel  String?
  education        String   // JSON array of education
  summary          String?
  recommendations  String   // JSON array of recommendations
  extractedInfo    String   // JSON object with contact info, work experience, projects
  analysisDate     DateTime @default(now())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("resume_analyses")
}
